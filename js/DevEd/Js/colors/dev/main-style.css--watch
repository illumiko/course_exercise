@keyframes left-pop {
  from {
    transform: translate(-1000px);
  }
}
.animation-left-pop {
  animation: left-pop 900ms ease-in-out forwards;
}

.padsActive {
  opacity: 1 !important;
}

@keyframes padsActive {
  from {
    transform: scale(0);
  }
  to {
    transform: scale(1);
  }
}
body {
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  background: #171717;
  margin: 0;
  padding: 0;
  color: white;
  display: grid;
  grid-template-columns: 1fr 110fr;
  grid-column-gap: 1rem;
}

header {
  grid-column: 2/2;
}

.navbar {
  box-sizing: border-box;
  grid-column: 1/1;
  background: #333;
  padding: 1rem 0.8rem;
}
.navbar h2 {
  margin-top: 0;
  padding-top: 0;
}
.navbar ul {
  position: fixed;
  padding: 0;
  display: grid;
  justify-content: center;
  margin: 0;
}
.navbar ul .tempo {
  width: 100px;
}
.navbar ul button {
  border: none;
  outline: none;
  background: #10b981;
  margin-bottom: 1rem;
  padding: 0.5rem 0.9rem;
  font-size: 1.2rem;
  transition: all ease 150ms;
}
.navbar ul button:hover {
  background: rgba(16, 185, 129, 0.9);
}
.navbar ul a {
  text-decoration: none;
  color: black;
  font-size: 1.2rem;
  z-index: -1;
  background: #0ea5e9;
  margin-bottom: 1rem;
  padding: 0.25rem 0;
  transition: all ease 150ms;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.navbar ul a:hover {
  background: rgba(14, 165, 233, 0.9);
}
.navbar ul a li {
  list-style: none;
}
.navbar ul a .mute-icon {
  padding: 0.25rem 0;
  z-index: 10;
  transition: all ease 300ms;
}
.navbar ul a .muteActive {
  fill: crimson;
}

@media (max-width: 900px) {
  #mainContent {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
}
@media (max-width: 766px) {
  #mainContent {
    display: block;
  }
}
@media (min-width: 1700px) {
  #mainContent {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
}

section select {
  border: none;
  outline: none;
  border-radius: 0.5rem;
  padding: 0.2rem;
}
section article {
  display: flex;
}
@media (max-width: 900px) {
  section article {
    display: grid;
    grid-template-columns: repeat(2, 100px);
  }
}
section article .pad {
  background-color: dodgerblue;
  width: 50px;
  height: 50px;
  margin: 1rem;
  opacity: 0.7;
}
@media (min-width: 900px) {
  section article .pad {
    margin: 2rem;
    margin-left: 0;
  }
}
section .hihatSoundsPads .pad {
  background: #10b981;
}
section .clapSoundsPads .pad {
  background: #8b5cf6;
}
section .crashSoundsPads .pad {
  background: #f59e0b;
}
section .snareSoundsPads .pad {
  background: #84cc16;
}
section .openhatSoundsPads .pad {
  background: #ec4899;
}
section .shakerSoundsPads .pad {
  background: #6366f1;
}
section .kickSoundsPads .pad {
  background: #d946ef;
}

